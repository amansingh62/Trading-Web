generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @id @default(uuid())
  name       String   
  email      String    @unique
  password   String   
  createdAt  DateTime  @default(now())

  refreshTokens RefreshToken[]
}

model RefreshToken {
  id          String   @id @default(uuid())
  tokenHash   String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([userId])
}